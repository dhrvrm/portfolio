---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact - Dhruv Verma">
  <div class="container mx-auto px-6 py-16">
    <div class="max-w-2xl mx-auto">
      <h1 class="text-4xl font-bold mb-8 bg-gradient-to-r from-modern-purple to-modern-cyan bg-clip-text text-transparent">Let's Connect</h1>
      
      <div class="space-y-8">
        <a 
          href="mailto:dhruvv@live.com"
          class="block p-8 bg-white dark:bg-gray-800 rounded-2xl shadow-lg hover:shadow-xl transition-all group relative overflow-hidden"
        >
          <div class="absolute inset-0 bg-gradient-to-r from-modern-purple/10 to-modern-cyan/10 dark:from-modern-purple/20 dark:to-modern-cyan/20 transform scale-x-0 group-hover:scale-x-100 transition-transform origin-left"></div>
          <div class="relative z-10">
            <h2 class="text-2xl font-semibold mb-2 bg-gradient-to-r from-modern-purple to-modern-cyan bg-clip-text text-transparent">Email</h2>
            <p class="text-xl text-gray-600 dark:text-gray-300 group-hover:text-modern-indigo dark:group-hover:text-modern-cyan transition-colors">dhruvv@live.com</p>
          </div>
        </a>

        <a 
          href="https://www.linkedin.com/in/dhruvv"
          target="_blank"
          rel="noopener noreferrer"
          class="block p-8 bg-white dark:bg-gray-800 rounded-2xl shadow-lg hover:shadow-xl transition-all group relative overflow-hidden"
        >
          <div class="absolute inset-0 bg-gradient-to-r from-modern-purple/10 to-modern-cyan/10 dark:from-modern-purple/20 dark:to-modern-cyan/20 transform scale-x-0 group-hover:scale-x-100 transition-transform origin-left"></div>
          <div class="relative z-10">
            <h2 class="text-2xl font-semibold mb-2 bg-gradient-to-r from-modern-purple to-modern-cyan bg-clip-text text-transparent">LinkedIn</h2>
            <p class="text-xl text-gray-600 dark:text-gray-300 group-hover:text-modern-indigo dark:group-hover:text-modern-cyan transition-colors">linkedin.com/in/dhruvv</p>
          </div>
        </a>
      </div>
    </div>
  </div>
</Layout>